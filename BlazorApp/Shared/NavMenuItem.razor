@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System
@using System.Collections.Generic
@using System.Linq
@using System.Threading.Tasks

<NavLink class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md" href="@Href" Match="NavLinkMatch.All">
    @ChildContent
</NavLink>

@code {
    [Parameter]
    public string Href { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
